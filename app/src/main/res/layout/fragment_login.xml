<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Login.fragment.Login">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/img"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/agustin"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/user"
        android:hint="Correo"
        android:maxLength="35"

        android:textColorHint="#000000"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:digits="abcdefghijklmnopqrstuvwxyz@._-1234567890·$%!'?¿\|\#~/()"
        android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        app:passwordToggleEnabled="true"
        android:textColorHint="@color/agustin"
        android:textAlignment="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:counterMaxLength="50"
        app:counterEnabled="true"
        app:errorEnabled="@bool/enable_system_alarm_service_default"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText

        android:textAlignment="center"
        android:hint="Contraseña"
        android:inputType="textPassword"

        android:id="@+id/password"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-,!¿¡?1234567890/()#+*%$"
        android:layout_marginTop="30dp"
        android:textColorHint="#000000"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:background="@drawable/borde_redondo"
        android:text="Iniciar Sesion" />

        <TextView
            android:text="Registrar"
            android:id="@+id/tv_registrar"
            android:textColor="@color/mygreen"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>

</LinearLayout>